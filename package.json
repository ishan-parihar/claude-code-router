{
  "name": "@ishan-parihar/ccr",
  "version": "2.0.0",
  "description": "Use Claude Code without an Anthropics account and route it to another LLM provider",
  "scripts": {
    "build": "pnpm build:shared && pnpm build:core && pnpm build:server && pnpm build:cli && pnpm build:ui",
    "build:core": "pnpm --filter @ishan-parihar/llms build",
    "build:shared": "pnpm --filter @ishan-parihar/shared build",
    "build:cli": "pnpm --filter @ishan-parihar/cli build",
    "build:server": "pnpm --filter @ishan-parihar/server build",
    "build:ui": "pnpm --filter @ishan-parihar/ui build",
    "release": "pnpm build && bash scripts/release.sh all",
    "release:npm": "bash scripts/release.sh npm",
    "release:docker": "bash scripts/release.sh docker",
    "dev:cli": "pnpm --filter @ishan-parihar/cli dev",
    "dev:server": "pnpm --filter @ishan-parihar/server dev",
    "dev:ui": "pnpm --filter @ishan-parihar/ui dev",
    "dev:core": "pnpm --filter @ishan-parihar/llms dev"
  },
  "bin": {
    "ccr": "dist/cli.js"
  },
  "keywords": [
    "claude",
    "code",
    "router",
    "llm",
    "anthropic"
  ],
  "author": "ishan-parihar",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.0.15",
    "esbuild": "^0.27.2",
    "shx": "^0.4.0",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "overrides": {
    "@types/react": "18"
  },
  "workspaces": [
    "packages/*"
  ]
}
